@page
@model ClinicWebCore.Pages.Departments.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Parent Department</label>
                <select asp-for="Department.ParentID" class="form-control">
                    <option value="">Підпорядкованість</option>
                    @foreach (var item in Model.DepartmentList)
                    {
                        <option value="@item.DepartmentID">
                            @Model.GetParentName(item.DepartmentID)
                        </option>
                    }

                </select>
                @*<input asp-for="Department.ParentID" class="form-control" />*@
                <span asp-validation-for="Department.ParentID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.Name" class="control-label"></label>
                <input asp-for="Department.Name" class="form-control" />
                <span asp-validation-for="Department.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
