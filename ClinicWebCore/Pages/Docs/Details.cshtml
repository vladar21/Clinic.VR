@page
@model ClinicWebCore.Pages.Docs.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Доктор</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Contact
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doc.Contact.LastName) @Model.GetInitials(this.Model.Doc.Contact.FirstName, this.Model.Doc.Contact.MiddleName)
        </dd>
        <dt class="col-sm-2">
            Department
        </dt>
        <dd class="col-sm-10">
            @Model.GetDepartamentName(this.Model.Doc.DepartmentID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Doc.Specialty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doc.Specialty)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Doc.Office)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doc.Office)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Doc.HiredAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doc.HiredAt)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Doc.DocID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
