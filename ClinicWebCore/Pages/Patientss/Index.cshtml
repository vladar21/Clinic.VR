@page
@model ClinicWebCore.Pages.Patients.IndexModel

@{
    ViewData["Title"] = "Пацієнти";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Пацієнти</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Contact)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].Contact.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patient[0].MedicalHistoryRegistoreNumber)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Patient) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Contact.LastName) @Model.GetInitials(item.Contact.FirstName, item.Contact.MiddleName)
            </td>
            <td>
                @Model.GetAddressToString(item.Contact.Address.AddressID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MedicalHistoryRegistoreNumber)
            </td>

            <td>
                <a asp-page="./Edit" asp-route-id="@item.PatientID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.PatientID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.PatientID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
