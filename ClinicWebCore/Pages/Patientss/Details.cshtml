@page
@model ClinicWebCore.Pages.Patients.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Patient</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient.Contact)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.Contact.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient.Contact.Address)
        </dt>
        <dd class="col-sm-10">
            @Model.GetAddressToString(this.Model.Patient.Contact.Address.AddressID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Patient.MedicalHistoryRegistoreNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Patient.MedicalHistoryRegistoreNumber)
        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Patient.PatientID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
