@page
@model ClinicWebCore.Pages.PatSchedules.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>DocSchedule</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DocSchedule.Patient)
        </dt>
        <dd class="col-sm-10">
            @Model.GetPatientFIO(this.Model.DocSchedule.PatientID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DocSchedule.IsVisitPatient)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DocSchedule.IsVisitPatient)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DocSchedule.Doc)
        </dt>
        <dd class="col-sm-10">
            @Model.GetDocFIO(this.Model.DocSchedule.DocID)
        </dd>
        <dt class="col-sm-2">
           Year
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DocSchedule.DocScheduleYear)
        </dd>
        <dt class="col-sm-2">
            Week
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DocSchedule.WeekNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DocSchedule.DayOfWeek)
        </dt>
        <dd class="col-sm-10">
            @Model.GetDayOfWeek(this.Model.DocSchedule.StartAppointmentAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DocSchedule.StartAppointmentAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DocSchedule.StartAppointmentAt)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DocSchedule.FinishAppointmentAt)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DocSchedule.FinishAppointmentAt)
        </dd>

    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.DocSchedule.DocScheduleID">Edit</a> |
