@page
@model ClinicWebCore.Pages.Addresses.IndexModel

@{
    ViewData["Title"] = "Адреса";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Адреса</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].ZipCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].Country)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].Region)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].Locality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].Street)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].House)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address[0].Apartment)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Address) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ZipCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Country)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Region)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Locality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Street)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.House)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apartment)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.AddressID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.AddressID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.AddressID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
